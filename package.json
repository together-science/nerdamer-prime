        "esbuild": "^0",
        "eslint-config-prettier": "^10",
        "eslint-plugin-jsdoc": "^61",
        "eslint-plugin-prettier": "^5",
        "jasmine": "^5",
        "jest": "^30",
        "jiti": "^2",
        "prettier": "^3",
        "prettier-plugin-jsdoc": "^1",
        "ts-jest": "^29",
        "ts-morph": "^27",
        "typescript": "^5",
        "typescript-eslint": "^8"
