        "differentiation",
        "derivative",
        "algebra",
        "calculus",
        "mathematics",
        "constants",
        "symbolic math"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/together-science/nerdamer-prime.git"
    },
    "bugs": {
        "url": "https://github.com/together-science/nerdamer-prime/issues"
    },
    "engines": {
        "node": ">=15"
    },
    "scripts": {
        "test": "tsc --noEmit && jasmine && jest",
        "build": "tsc && esbuild all.js --bundle --minify --outfile=all.min.js --format=iife --global-name=nerdamer",
        "lint": "eslint . && tsc --noEmit",
        "format": "prettier --write \"**/*.{ts,js,json,jml,md,html}\"",
        "format:check": "prettier --check \"**/*.{ts,js,json,jml,md,html}\""
    },
    "dependencies": {
