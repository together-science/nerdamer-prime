{
    "author": {
        "name": "Gunnar Mein taking over from Martin Donk",
        "email": "info@together.science"
    },
    "description": "javascript light-weight symbolic math library",
    "name": "nerdamer-prime",
    "license": "MIT",
    "version": "1.3.1",
