{
    "compilerOptions": {
        // Modern ES target and libraries
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "module": "ESNext",
        "moduleResolution": "bundler",

        // Strict type checking (modern best practices)
        "strict": true,
        "exactOptionalPropertyTypes": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noPropertyAccessFromIndexSignature": true,

        // Modern module handling
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "verbatimModuleSyntax": false,
        "allowImportingTsExtensions": false,

        // Output settings (no emit for tests)
        "noEmit": true,
        "skipLibCheck": true,

        // Advanced options for better DX
        "incremental": true,
        "isolatedModules": true,
        "allowJs": true,
        "checkJs": false,

        // Type resolution
        "typeRoots": ["../node_modules/@types"],
        "types": ["jest", "node"],
        "baseUrl": "..",
        "paths": { "nerdamer": ["./index.d.ts"], "*": ["./node_modules/@types/*"] }
    },
    "include": ["./**/*.ts", "../index.d.ts", "../*.d.ts"],
    "exclude": ["../node_modules", "../spec"]
}
